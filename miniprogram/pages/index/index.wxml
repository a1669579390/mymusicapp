<view class="body"  wx:if="{{list.length!=0}}">
<!-- 搜索框 -->
<van-search
  value="{{ value }}"
  placeholder="搜索歌曲、歌手"
  use-action-slot
  bind:change="onChange"
  bind:search="onSearch"
  background="#fffff"
>
</van-search>
<!-- 热门歌曲 -->
<view class="first_bar">
  <view class="hot_music">
    <text>热门歌曲</text>
      <view class="hot_music_more">
        <text>更多</text>
        <van-icon name="arrow"></van-icon>
      </view>
  </view>
  <!-- 推荐列表 -->
  <view class="hot_detail">
    <block wx:for="{{list}}" wx:key="index">
      <view class="detail_rows">
        <image src="{{picUrl[index]}}"></image>
        <view class="arrow_between">       
          <view class="name_position">
            <text>{{item.data.songname}}</text>
            <text>{{item.data.singer[0].name}}</text>
          </view>         
           <!-- <van-icon name="arrow"></van-icon> -->
          </view>  
      </view>         
    </block>
  </view>
</view>
<!-- 热门歌单 -->
<view class="second_bar">
  <view class="hot_music">
    <text>官方歌单</text>
  </view>
</view>
<!-- 热门歌单列表 -->
 <scroll-view scroll-x="true" class="musices">  
    <block wx:for="{{guanGedan.v_niche[0].v_card}}" wx:key="index">
     <view class="every_musices" data-id="{{item.id}}" bindtap="to_detail">
     <view class="listenCount">
        <image src="../../images/play.png"></image>
        {{listenCount_0[index]}}
        </view> 
      <van-image
            width="200rpx"
            height="200rpx"
            radius="10rpx"
            src="{{item.cover}}"
        ></van-image>
       </view>
    </block>  
 </scroll-view>
 <!-- 热门歌单 -->
<view class="second_bar">
  <view class="hot_music">
    <text>达人歌单</text>
  </view>
</view>
<!-- 热门歌单列表 -->
 <scroll-view scroll-x="true" class="musices">  
    <block wx:for="{{darenGedan.v_niche[0].v_card}}" wx:key="index">
     <view class="every_musices" data-id="{{item.id}}" bindtap="to_detail">
     <view class="listenCount">
        <image src="../../images/play.png"></image>
        {{listenCount_1[index]}}
        </view> 
      <van-image
            width="200rpx"
            height="200rpx"
            radius="10rpx"
            src="{{item.cover}}"
        ></van-image>
        
       </view>
    </block>  
 </scroll-view>
</view>